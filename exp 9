import random
# Function to simulate call center for a given policy
def simulate_call_center(policy, num_agents=3, num_calls=1000):
    # Initialize workload (queue time) for each agent
    queues = [0.0] * num_agents
    total_wait_time = 0.0
  for _ in range(num_calls):
        # Choose agent based on policy
        if policy == "random":
            agent = random.randint(0, num_agents - 1)
        elif policy == "shortest_queue":
            agent = queues.index(min(queues))
 # Waiting time is current workload of chosen agent
        wait_time = queues[agent]
# Service time (exponential distribution)
        service_time = random.expovariate(1.0)
  # Update values
        total_wait_time += wait_time
        queues[agent] += service_time
  # Average waiting time
    return total_wait_time / num_calls
# Monte Carlo simulation
def monte_carlo_simulation(policy, runs=100):
    total = 0.0
    for _ in range(runs):
        total += simulate_call_center(policy)
    return total / runs
# Main execution
policies = ["random", "shortest_queue"]
print("Monte Carlo Simulation Results:\n")
for policy in policies:
    avg_wait = monte_carlo_simulation(policy)
    print(f"Policy: {policy}")
    print(f"Average Waiting Time: {avg_wait:.2f}\n")
